{
	"include": ["src"],
	"compilerOptions": {
		"target": "es2022",
		"module": "CommonJS",
		"esModuleInterop": true, 
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./build",
		"noImplicitOverride": true,
		"rewriteRelativeImportExtensions": true,
		"alwaysStrict": true
	}
}
